<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Databar.Layout.EditProductPage"  
             Title="Rediger Produkt">
  <ContentPage.Padding>
    <!--iOS må starte 20dp lenger ned fra toppen. Ellers havner det øverst i statuslinjen (aka klokken)-->
    <OnPlatform x:TypeArguments="Thickness"
                iOS="0, 20, 0, 0"/>
  </ContentPage.Padding>
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="5,0,0,0">
        <Label FontSize="14" Text="GTIN:"/>
        <Entry Keyboard="Numeric"/>
        <Label FontSize="14" Text="Varetekst:"/>
        <Entry Keyboard="Default"/>
        <Label FontSize="14" Text="Batch/Lot nr.:"/>
        <Entry Keyboard="Default"/>
        <Label FontSize="14" Text="Best før dato:"/>
        <Entry Keyboard="Numeric" Placeholder="YY/MM/DD"/>
        <Label FontSize="14" Text="Siste forbruksdato:"/>
        <Entry Keyboard="Numeric" Placeholder="YY/MM/DD" />
        <Label FontSize="14" Text="Serienummer:" />
        <Entry Keyboard="Numeric" />
        <Label FontSize="14" Text="Bruttopris (kr):"/>
        <Entry Keyboard="Numeric" />
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>