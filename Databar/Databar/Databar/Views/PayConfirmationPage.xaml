<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Databar.Views.PayConfirmationPage"
              xmlns:ViewModels="clr-namespace:Databar.ViewModels">

	<ContentPage.Padding>
		<!--iOS må starte 20dp lenger ned fra toppen. Ellers havner det øverst i statuslinjen (aka klokken)-->
		<OnPlatform x:TypeArguments="Thickness"
					iOS="0,20,0,0"/>
	</ContentPage.Padding>

	<ContentPage.Content>

			<StackLayout>
				<StackLayout
					VerticalOptions="CenterAndExpand"
					HorizontalOptions="Center"
					Spacing="10"
					Orientation="Vertical">

					<Image
						  HorizontalOptions="Center"
						  VerticalOptions="Center"
						  x:Name="imageView"
						  Source="GS1_Norway_logo_61px.png"
						  BackgroundColor="Transparent"
						  IsVisible="true">

						<OnPlatform x:TypeArguments="ImageSource"
									iOS="GS1_Norway_logo_61px.png"
									Android="GS1_Norway_logo_61px.png" />

					</Image>
				
				</StackLayout>

				<StackLayout
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					Spacing="0">

					<Label Text=
						"Gratulerer"
						FontSize="Large"
						TextColor="#002C6C"
						FontAttributes="Bold"
						VerticalTextAlignment="Center"
						HorizontalTextAlignment="Center"/>

					<Label
						Text=
						"&#x0a;Du sparte kr."
						FontSize="Medium"
						TextColor="#002C6C"
						LineBreakMode="CharacterWrap"
						VerticalTextAlignment="Start"
						HorizontalTextAlignment="Center"/>

			  <!--Shows the discountsum of all the items-->     
                	<Label 
						VerticalTextAlignment="Start"
						HorizontalTextAlignment="Center"
						x:Name="DiscountSumLabel" 
						FontSize="Medium" 
						FontAttributes="Bold"
						TextColor="#002C6C"/>
 

					<Label
						Text=
						" på å handle ¨Smart¨.&#x0a;&#x0a; Samtidig bidro du til at&#x0a; mindre mat blir kastet.&#x0a;"
						FontSize="Medium"
						TextColor="#002C6C"
						LineBreakMode="CharacterWrap"
						VerticalTextAlignment="Start"
						HorizontalTextAlignment="Center"/>

					<Label
						Text=
						"Velkommen igjen!&#x0a;"
						FontSize="Medium"
						TextColor="#002C6C"
						LineBreakMode="CharacterWrap"
						VerticalTextAlignment="Start"
						HorizontalTextAlignment="Center"/>

				</StackLayout>
						
			
				<!-- Makes a horizontal line between the text and the buttons at the bottom -->
				<BoxView HeightRequest="3" WidthRequest="1" BackgroundColor="#F26334"/>
					
				<StackLayout
						VerticalOptions="End"
						Spacing="40"
						Orientation="Horizontal"
						HorizontalOptions="Center">
				
			<!-- Made button gray because of no use on this page -->						
					<Button x:Name="cartButton"
						BackgroundColor="Gray"
						BorderColor="Transparent">

					 	 <Button.Image>
	   							<OnPlatform x:TypeArguments="FileImageSource"
	                				Android="gs1_shopping_cart.png"
	                				iOS="GS1_Symbol_Shopping_Cart_RGB_20150416.png"/>
	                   	 </Button.Image>
			

					</Button>

					<Button x:Name="closeButton"
						BackgroundColor="Transparent"
						BorderColor="Transparent"
						IsVisible="true"
						Clicked="CloseWindow">

					  	<Button.Image>
	   						<OnPlatform x:TypeArguments="FileImageSource"
							Android="gs1_remove_circle.png"
							iOS="GS1_Symbol_Remove_Circle_RGB_20150416.png"/>
	                  	</Button.Image>

					</Button>

			<!-- Made button gray because of no use on this page -->				
				<Button x:Name="trashButton"
						BackgroundColor="Gray"
						BorderColor="Transparent">

						<Button.Image>
	   						<OnPlatform x:TypeArguments="FileImageSource"
	                			Android="gs1_trash.png"
	                			iOS="GS1_Symbol_Trashcan_RGB_20150416.png"/>
	                  	</Button.Image>

				</Button>

			</StackLayout>
			
		</StackLayout>

				
	</ContentPage.Content>

		
</ContentPage>