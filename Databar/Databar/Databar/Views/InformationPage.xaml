<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Databar.Views.InformationPage"
             xmlns:ViewModels="clr-namespace:Databar.ViewModels">
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="StartAndExpand">
                <!-- if items that might need some explanation from the page where the button was pushed -->
                <ListView x:Name="InfoListView" ItemsSource="{Binding HelpList}" >
                    <ListView.Header>
                        <Label Text="Hjelp" TextColor="#002c6c" FontAttributes="Bold" HorizontalOptions="Center" FontSize="Medium" HorizontalTextAlignment="Center" />
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="5">
                                   <Grid RowSpacing="5">
										<Grid.RowDefinitions >
											<RowDefinition Height="Auto"/>
											 </Grid.RowDefinitions>
									
								
                                        <Label Text="{Binding ItemText}" FontAttributes="Bold" Grid.Column="0" FontSize="Small" TextColor="#002c6c" HeightRequest="75"/>
                                        <Label Text="{Binding Explanation}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" FontSize="Small" TextColor="#002c6c" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3" HeightRequest="100" />
                                       
									</Grid>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <StackLayout>
                <Button x:Name="dismissButton" 
                    BackgroundColor="Transparent" 
                    BorderColor="Transparent" 
                    Clicked="OnDismissButtonClicked"
                    HorizontalOptions="Center">
                    <Button.Image>
                        <OnPlatform x:TypeArguments="FileImageSource"
                                Android="gs1_remove_circle.png"
                                iOS="GS1_Symbol_Remove_Circle_RGB_20150416.png" />
                    </Button.Image>
                </Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>