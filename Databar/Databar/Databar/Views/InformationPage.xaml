<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Databar.Views.InformationPage"
             xmlns:ViewModels="clr-namespace:Databar.ViewModels">
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand">
                <!-- items that might need some explanation from the page where the button was pushed -->
                <ListView x:Name="InfoListView" ItemsSource="{Binding HelpList}" SeparatorVisibility="None" HasUnevenRows="true" HeightRequest="700">
                    <ListView.Header>
                        <Label Text="Hjelp" TextColor="#002c6c" FontAttributes="Bold" HorizontalOptions="Center" FontSize="Medium" HorizontalTextAlignment="Center" />
                    </ListView.Header>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <RelativeLayout VerticalOptions="FillAndExpand">
                                    <Label Text="{Binding TextAnd}" FontAttributes="Bold" Grid.Column="0" FontSize="Small" TextColor="#002c6c" HeightRequest="100" VerticalOptions="FillAndExpand" />
                                </RelativeLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <BoxView HeightRequest="3" WidthRequest="1" Color="#F26334" />
            <StackLayout VerticalOptions="End">
                <Button x:Name="dismissButton" 
                    BackgroundColor="Transparent" 
                    BorderColor="Transparent" 
                    Clicked="OnDismissButtonClicked"
                    HorizontalOptions="Center">
                    <Button.Image>
                        <OnPlatform x:TypeArguments="FileImageSource"
                                Android="gs1_remove_circle.png"
                                iOS="GS1_Symbol_Remove_Circle_RGB_20150416.png" />
                    </Button.Image>
                </Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>